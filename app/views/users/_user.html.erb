<div id="<%= dom_id user %>">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>content:</strong>
    <% user.posts.each do |post| %>
      <%= post.id %>
      <%= post.content %>
    <% end %>
  </p>

</div>
